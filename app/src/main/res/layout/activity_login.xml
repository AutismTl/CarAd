<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/login_status_logo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@color/themecolor_1">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_status_binding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="绑定手机号"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="为确保您账号的安全及正常使用，账号需绑定手机"
            android:textColor="@color/light_grey"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/login_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:elevation="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="欢迎使用车贴广告"
            android:textColor="@color/black"
            android:textSize="28dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/login_phone"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_edit"
            android:drawableLeft="@drawable/login_phone"
            android:drawablePadding="5dp"
            android:hint="输入手机号码"
            android:paddingLeft="8dp"
            android:inputType="phone"
            android:textColorHint="@color/gray"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/login_psw"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:paddingLeft="8dp"
                android:background="@drawable/bg_login_edit"
                android:hint="输入验证码"
                android:inputType="number"
                android:letterSpacing="0.1"
                android:drawableLeft="@drawable/login_psd"
                android:drawablePadding="5dp"
                android:textColorHint="@color/gray"
                android:textSize="18dp" />

            <Button
                android:id="@+id/login_msg"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_login_edit"
                android:enabled="false"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/light_grey"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_weixin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:src="@drawable/weixin" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="使用微信账号进行关联"
                android:textColor="@color/themecolor_1"
                android:textSize="20dp" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/login_enter"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_login_enter"
            android:orientation="vertical">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/login_enter" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>